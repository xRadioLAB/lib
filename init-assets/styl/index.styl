bannerHeight = 475px

.area-banner
    height: bannerHeight

.area-banner-img
    width: widthMax
    height: bannerHeight
    position: absolute
    top: 0
    left: 50%
    margin-left: -(widthMax * 0.5)

.big-title
    font-size: 20px
    color-link()
    font-weight: bold
    line-height: 60px


rotWidth = 699px
rotHeight = 400px

.rot1
    width: rotWidth
    height: rotHeight

    img
        width: rotWidth
        height: rotHeight
    
    .swiper-wrapper
        z-index: 3

    .swiper-title
        width: 100%
        position: absolute
        left: 0
        bottom: 0 
        z-index: 2
        img-bg()

        & .swiper-text
            color: #ffffff
            font-size: 18px
        
        & .swiper-text
            padding: 15px 20px
            position: absolute
            z-index: 3
            bottom: 0
            left: 0
            text-shadow: 0 2px 2px rgba(#000, 0.3)

        &:after
            pseudo-classes-base()
            background-color: rgba(#000, 0.6)
            position: absolute
            z-index: 2
            display: block
            height: 56px
            width: 100%
            left: 0
            bottom: 0

    & .swiper-pagination
        width: auto
        left: auto
        right: 0
        padding-right: 10px
        bottom: 19px

        & .swiper-pagination-bullet
            background-color: #FFF
            opacity: 0.6
            
        & .swiper-pagination-bullet-active
            background-color: #FFF
            opacity: 1
            
    a:hover .swiper-text
        color-hover()


.container1
    margin-top: 30px

    & .left
        width: rotWidth

    & .right
        width: 485px
        
        .big-title,
        .list
            padding-left: 19px
        
        .big-title
            margin-top: 10px
        
        .abs
            margin-left: 19px
            padding-bottom: 20px
            margin-bottom: 18px
            border-bottom: #d9d9d9 1px dashed

        .col-box
            width: 100%
            display: block
            border-bottom: #d9d9d9 1px solid
            padding-bottom: 12px
            margin-top: 8px

